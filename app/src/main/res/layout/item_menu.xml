<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:id="@+id/item_restaurant"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/menu_edit"
        >

        <EditText
            android:id="@+id/edit_menu_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Edit Name"
            android:textSize="12sp"
            />
        <EditText
            android:id="@+id/edit_menu_price"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Edit Price"
            android:inputType="number"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/menu_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <Button
            android:id="@+id/button_select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_photo" />

        <Button
            android:id="@+id/edit_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:id="@+id/menu_view">


        <TextView
            android:id="@+id/item_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="menu text" />

        <Button
            android:id="@+id/item_menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/item_menu_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />


    </LinearLayout>

</LinearLayout>
