<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:id="@+id/item_restaurant"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/menu_edit"
        >

        <EditText
            android:id="@+id/edit_menu_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Edit Name"
            android:textSize="12sp"
            />
        <EditText
            android:id="@+id/edit_menu_price"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Edit Price"
            android:inputType="number"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/button_select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_photo"
            android:backgroundTint="@color/pink_p_darker"/>

        <ImageView
            android:id="@+id/menu_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


        <Button
            android:id="@+id/edit_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:backgroundTint="@color/pink_p_darker"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menu_view">


        <TextView
            android:id="@+id/item_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="menu text"
            android:layout_marginRight="80dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/item_menu_remove"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:layout_marginRight="10dp"
                android:text="-" />

            <Button
                android:id="@+id/item_menu_add"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_gravity="right"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
